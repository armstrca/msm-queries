<h1>List of all movies</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

<% Movies.all.each do |a_movie| %>
  <tr>
    <td> <%= a_movie.id%> </td>
    <td> 
      <img src="<%= a_movie.image%>" width="200"> 
    </td>
    <td> <%= a_movie.name%> </td>
    <td> <%= a_movie.dob%> </td>
    <td> <a href="/movies/<%= a_movie.id %>">Show details</a> </td>
  </tr>
<% end %>

</table>
