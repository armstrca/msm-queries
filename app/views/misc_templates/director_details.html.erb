<h1>Director #<%= @specific_director.id %> details</h1>

<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>Name</dt> 
  <dd><%= @specific_director.name %></dd>
  
  <dt>DoB</dt> 
  <dd><%= @specific_director.dob %></dd>

  <dt>Bio</dt> 
  <dd><%= @specific_director.bio %></dd>

  <dt>Image</dt> 
  <dd><img src="<%= @specific_director.image %>" alt="Picture of <%= @specific_director.name %>" width="400"></dd>

  <dt>Created at</dt> 
  <dd><%= @specific_director.created_at %></dd>

  <dt>Updated at</dt> 
  <dd><%= @specific_director.updated_at %></dd>
</dl>

<h2>Filmography</h2>  

<% @matching_movies = Movie.where({ :director_id => @specific_director.id }) %>


<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>

  </tr>
  <% @matching_movies.each do |a_movie|  %>
     <tr>
    <td><%= a_movie.id %></td>
    <td><img src="<%= a_movie.image %>" width="200"></td>
    <td><%= a_movie.title %></td>
    <td><%= a_movie.year %></td>
    <td><%= a_movie.director_id %></td>
    <td>
      <a href="/movies/<%= a_movie.id %>">Show details</a>
    </td>

  </tr>
  <% end %>

</table>
